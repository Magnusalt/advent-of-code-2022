var day1 = ParseInput(input1);
var count = 0;
for(var i = 3; i < day1.Length; i++)
{
    var triplet1 = day1[(i-3)..(i)];
    var triplet2 = day1[(i-2)..(i+1)];
    count = triplet2.Sum() > triplet1.Sum() ? ++count : count;
}

